@model StoreApp.Model.Input.CreateAccount;

<h1>Create Account page</h1>

<partial name="/Views/Partials/FlashMessagePartial.cshtml" />
<form asp-controller="Account" asp-action="TryCreate" method="POST">
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" placeholder="User Name" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <input type="submit" value="Submit" />
</form>
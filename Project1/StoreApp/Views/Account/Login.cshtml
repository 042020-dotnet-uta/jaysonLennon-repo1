@model StoreApp.Models.LoginUser;

<h1>Login Page</h1>

@if (Model.ErrorMessage != null)
{
    <div style="background: red;">@Model.ErrorMessage</div>
}
<form asp-controller="Account" asp-action="TryLogin" method="POST">
    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" placeholder="User Name" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <input type="submit" value="Submit" />
</form>
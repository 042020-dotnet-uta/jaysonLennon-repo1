@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@namespace StoreApp.SessionLayout

<div style="text-decoration: underline;">this is the session header partial</div>

@if (!ViewData.ContainsKey(K.UserName)){
    <a asp-controller="Account" asp-action="LoginIndex">Login</a>
    <a asp-Controller="Account" asp-action="CreateAccountIndex">Create Account</a>
} else {
    <div>
        <a asp-controller="Cart" asp-action="Index">View Cart</a>
        <a asp-controller="Account" asp-action="Manage">@ViewData[K.UserName]</a>
    </div>
}